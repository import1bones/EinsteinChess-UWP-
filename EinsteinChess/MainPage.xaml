<Page
    x:Class="EinsteinChess.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EinsteinChess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView ItemsSource="{x:Bind Cells}" Width="800" Height="800" HorizontalAlignment="Left" VerticalAlignment="Top">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:Cell">
                    <Grid>
                        <Rectangle Width="150" Height="150" Fill="{x:Bind FillColor}"/>
                        <TextBlock Text="{x:Bind ChessManNo}"  FontSize="30" Visibility="{x:Bind IsChessMan}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Height="800" >
            
        </StackPanel>
    </Grid>
</Page>
